<%= form_with(model: user ) do |form| %>
<div class= "border border-dark rounded w-25 p-3 m-auto">
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
        <% user.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :firstName %><br>
    <%= form.text_field :firstName %>
  </div>

  <div class="field">
    <%= form.label :lastName %><br>
    <%= form.text_field :lastName %>
  </div>

  <div class="field">
    <%= form.label :email %><br>
    <%= form.text_field :email %>
  </div>

  <div class="field">
    <%= form.label :password %><br>
    <%= form.password_field :password %>
  </div>

  <div class="field">
    <%= form.label :password_confirmation %><br>
    <%= form.password_field :password_confirmation %>
  </div>
  
    <%if session[:auth] == 1%>
        <div class="field"><br>
           <%= form.label :authentication %>          
           <%= form.radio_button :authentication, 1 %>
           <%= form.label '1' %>
           <%= form.radio_button :authentication, 2 %>
           <%= form.label '2' %>
        </div> 
  <%end%>
  <br>

  <div class="actions">

    <%= form.submit :submit, :class => 'btn btn-primary m-auto'%>

  </div><br>
  
<% end %>
</div>
